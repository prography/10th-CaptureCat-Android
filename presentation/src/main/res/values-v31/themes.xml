<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Splash 전용 테마 -->
    <style name="Theme.App.SplashScreen" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Splash 화면 배경 -->
        <item name="windowSplashScreenBackground">@color/white</item>

        <!-- 애니메이션 아이콘 -->
        <item name="windowSplashScreenAnimatedIcon">@color/white</item>

        <!-- 지속시간 -->
        <item name="windowSplashScreenAnimationDuration">0</item>

        <!-- 상태바 색상 -->
        <item name="android:statusBarColor">@color/black</item>

        <!-- Splash 끝나고 적용할 테마 지정! -->
        <item name="postSplashScreenTheme">@style/Theme.Prography</item>

        <item name="android:windowIsTranslucent">true</item>
    </style>
</resources>